<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_view_controller_item_background"
    android:orientation="vertical">

    <!--android:layout_marginBottom="@dimen/view_controller_layout_margin"-->
    <!--android:layout_marginLeft="@dimen/view_controller_layout_margin"-->
    <!--android:layout_marginRight="@dimen/view_controller_layout_margin"-->

    <include layout="@layout/view_controller_header" />

    <!--<include layout="@layout/view_controller_simple_status" />-->

    <include layout="@layout/view_controller_text_value" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/butArmHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/view_controller_footer_but_padding"
            android:text="Arm Home"
            android:textColor="@color/color_white"
            android:textSize="@dimen/view_controller_control_but_text_size" />

        <TextView
            android:id="@+id/butDisarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/view_controller_footer_but_padding"
            android:text="Disarm"
            android:textColor="@color/color_white"
            android:textSize="@dimen/view_controller_control_but_text_size" />

        <TextView
            android:id="@+id/butArmAway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="@dimen/view_controller_footer_but_padding"
            android:text="Arm Away"
            android:textColor="@color/color_white"
            android:textSize="@dimen/view_controller_control_but_text_size" />
    </LinearLayout>


</LinearLayout>