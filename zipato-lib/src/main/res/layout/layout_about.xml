<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_about_padding">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_nameMain"
        android:textColor="@color/color_white"
        android:textSize="@dimen/fragment_setting_menu_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/layout_about_margin"
        android:layout_marginTop="@dimen/layout_about_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAPPVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Medium Text"
                android:textColor="@color/color_white"
                android:textSize="@dimen/row_setting_menu_text_size" />

            <TextView
                android:id="@+id/textViewAPPVValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_about_margin1"
                android:text="Medium Text"
                android:textColor="@color/color_white"
                android:textSize="@dimen/row_setting_menu_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>