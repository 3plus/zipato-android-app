<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewLeft"
        android:layout_width="@dimen/row_browser_left_image_width"
        android:layout_height="@dimen/row_browser_left_image_high"
        android:layout_gravity="center"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBrowserLeftName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_browser_left_name_text_margin"
            android:layout_marginLeft="@dimen/row_browser_left_name_text_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="Test test"
            android:textColor="@color/color_white"
            android:textSize="@dimen/row_browser_left_name_text_size" />

        <TextView
            android:id="@+id/textViewBrowserLeftCounter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/row_browser_left_name_text_margin"
            android:layout_marginRight="@dimen/row_browser_left_name_text_margin"
            android:singleLine="true"
            android:text="Test test"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_white"
            android:textSize="@dimen/row_browser_left_name_text_size2"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>