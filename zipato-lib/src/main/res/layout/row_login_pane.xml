<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:padding="@dimen/row_login_pane_margin1">

        <TextView
            android:id="@+id/textViewLogZipaBoxName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="@dimen/row_login_pane_text_size1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSNValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_login_pane_margin1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/row_login_pane_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/row_login_pane_margin1">

            <TextView
                android:id="@+id/textViewMacValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_login_pane_margin1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/row_login_pane_text_size" />

            <TextView
                android:id="@+id/textViewIPValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/row_login_pane_margin1"
                android:textColor="@color/color_white"
                android:textSize="@dimen/row_login_pane_text_size" />

    </LinearLayout>
</LinearLayout>