<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zipato.customview.CustomRecyclerView
            android:id="@+id/recyclerViewScenes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fbTypesscenes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="?android:selectableItemBackground"
            android:scaleType="centerInside"
            android:src="@drawable/menu_scene"
            fab:fab_colorNormal="@color/vc_fab_normal_color"
            fab:fab_colorPressed="@color/color_view_controller_item_background"
            fab:fab_shadow="true"
            fab:fab_type="normal" />
    </FrameLayout>
</LinearLayout>