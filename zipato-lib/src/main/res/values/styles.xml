    <!--<item name="android:background">@drawable/custom_config_spinner_selectable</item>-->
    <!--</style>-->

    <style name="custom.scene.textView.background" parent="android:TextAppearance.Large">
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:bottomRightRadius">5dp</item>
    </style>

    <style name="SeekArc">
        <item name="arcColor">@color/progress_gray_dark</item>
    </style>
    -

    <style name="SeekArcLight">
        <item name="arcColor">@color/progress_gray</item>
    </style>

    <style name="popupAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/popup_in</item>
        <item name="@android:windowExitAnimation">@anim/popup_out</item>
    </style>


</resources>
